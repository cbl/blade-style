{
	"name": "cbl/blade-style",
	"license": "MIT",
	"authors": [
		{
			"name": "Lennart Carstens-Behrens",
			"email": "lennart.carbe@gmail.com"
		}
	],
	"require": {
		"scssphp/scssphp": "^1.1",
		"matthiasmullie/minify": "^1.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.3",
		"orchestra/testbench": "^5.0|^7.0|^8.0|^9.0"
	},
	"autoload": {
		"psr-4": {
			"BladeStyle\\": "src/"
		},
		"files": [
			"src/Support/helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"BladeStyle\\ServiceProvider"
			]
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit"
	}
}
